<?xml version="1.0" encoding="utf-8" ?>
<test-local-config>

	<global>
    <gixsql-install-base>/usr/local</gixsql-install-base>
		<keep-temps>1</keep-temps>
		<verbose>1</verbose>
		<test-filter></test-filter>
		<dbtype-filter>pgsql</dbtype-filter>
    <mem-check></mem-check>
		<temp-dir>/tmp/gixsql-test</temp-dir>
		<environment>
			<variable key="GIXSQL_FIXUP_PARAMS" value="on" />
      <variable key="LD_LIBRARY_PATH" value="/usr/local/gnucobol/lib" />
      <variable key="DEBUGINFOD_URLS" value="https://debuginfod.archlinux.org"/>
		</environment>
	</global>

	<architectures>
		<architecture id="x64" />
	</architectures>
	<compiler-types>
		<compiler-type id="gcc" />
	</compiler-types>

	<compilers>
		<compiler type="gcc" architecture="x64" id="gnucobol-3.1.2-linux-gcc-x64">
      <bin_dir_path>/usr/local/gnucobol/bin</bin_dir_path>
      <lib_dir_path>/usr/local/gnucobol/lib</lib_dir_path>
			<config_dir_path>/tmp/gnucobol</config_dir_path>
			<environment>
			</environment>
		</compiler>
	</compilers>

	<data-source-clients>
		<data-source-client type="pgsql" architecture="x64">
			<environment>
			</environment>
			<provider value="Npgsql" />
		</data-source-client>

		<data-source-client type="mysql" architecture="x64">
			<environment>
			</environment>
			<provider value="MySql.Data.MySqlClient" />
			<additional-preprocess-params value="-z a" />
		</data-source-client>

		<data-source-client type="oracle" architecture="x64">
			<environment>
				<variable key="LD_LIBRARY_PATH" value="/opt/instantclient_21_7" />
			</environment>
			<provider value="Oracle.ManagedDataAccess.Client" />
			<additional-preprocess-params value="-z c" />
		</data-source-client>

		<data-source-client type="sqlite" architecture="x64">
			<environment>
			</environment>
			<provider value="System.Data.SQLite" />
			<additional-preprocess-params value="-z c" />
		</data-source-client>

		<data-source-client type="odbc" architecture="x64">
			<environment>
			</environment>
			<provider value="System.Data.Odbc" />
			<additional-preprocess-params value="-z a" />
		</data-source-client>
	</data-source-clients>

